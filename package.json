{
  "name": "zapdos-remixed",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "run-p --print-label --race dev:*",
    "dev:css": "pnpm run tailwind --watch",
    "dev:remix": "cross-env NODE_ENV=development remix dev",
    "build": "pnpm run tailwind --minify && remix build",
    "start": "remix-serve build",
    "format": "prettier --write .",
    "tailwind": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --ext js,ts,tsx .",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "validate": "run-p \"test --run\" lint typecheck",
    "lint-fix": "pnpm lint -- --fix",
    "coverage": "vitest --run --coverage"
  },
  "dependencies": {
    "@03gibbss/remix-auth-twitch": "^1.0.1",
    "@prisma/client": "^4.0.0",
    "@remix-run/node": "^1.6.5",
    "@remix-run/react": "^1.6.5",
    "@remix-run/serve": "^1.6.5",
    "@remix-run/server-runtime": "^1.6.5",
    "isbot": "^3.5.0",
    "node": "^16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.2.2"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.5",
    "@remix-run/dev": "^1.6.5",
    "@remix-run/eslint-config": "^1.6.5",
    "@rushstack/eslint-patch": "^1.1.4",
    "@testing-library/dom": "^8.16.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.5",
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.0.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "c8": "^7.11.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "happy-dom": "^6.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prisma": "^4.0.0",
    "tailwindcss": "^3.1.6",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.18.1"
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
